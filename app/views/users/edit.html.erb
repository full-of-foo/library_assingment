<% provide(:title, "Edit Account") %>

<div class="row">
  <div class="col-lg-8 col-lg-offset-2">
    <div class="panel panel-default" id="navs">

      <div class="panel-heading user-show-panel-header">
        <h3>Editing Profile: <%= @user.full_name %></h3>
        <a id="change-grav" href="http://gravatar.com/emails"><span class="pull-right user-show-grav-container"><%= gravatar_for @user %></span></a>
      </div>

      <div class="col-lg-4 pull-right">
        <div id="small-push"></div>
        <img src="/assets/0002.gif" class="img-responsive img-circle" alt="kitty">
      </div>

      <%= render 'shared/error_messages', object: @user %>
      <div class="panel-body clearfix user-show-panel">
        <div class="col-lg-7">
          <%= labeled_form_for(@user, url: sti_user_path(@user.type, @user), method: :patch) do |f| %>

            <%= render 'users/fields', f: f %>

            <%= f.submit "Update Account", class: "btn btn-large btn-primary" %>
          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>
