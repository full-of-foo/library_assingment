<div class="navbar navbar-default navbar-static-top">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".header-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "Crappy-Book-Store.com", root_path, class: "navbar-brand" %>
    </div>

    <div class="collapse navbar-collapse header-collapse">
      <ul class="nav navbar-nav">
      <% if signed_in? %>
          <li><%= link_to "Books",   books_path, id: 'books-link' %></li>
        <% if current_user.type == "Admin" %>
            <li><%= link_to "Users",   users_path %></li>
        <% end %>
          <li><%= link_to "Profile", sti_user_path(current_user.type, current_user) %></li>
        <% else %>
          <li><%= link_to "About",   about_path %></li>
          <li><%= link_to "Help",    help_path %></li>
        <% end %>
      </ul>
      <% if signed_in? %>
        <p class="navbar-text navbar-right"><%= link_to "Sign Out", signout_path, method: "delete", id: 'sign-out-link' %></p>
      <% else %>
        <p class="navbar-text navbar-right"><%= link_to "Sign Up", signup_path %></p>
      <% end %>
    </div>
  </div>
</div>
